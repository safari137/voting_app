<% include ../partials/header.ejs %>
<div class="container">
    <h1 class="text-center">New Poll</h1>
    <div class="content-container form">
        <form method='POST' action='/poll' class="form-group">
            <div class="form-group">
                <input type='text' name='poll[title]' placeholder='title' class="form-control">
            </div>
            
            <div class="form-group">
                <textarea name='poll[options]' placeholder='options separated by lines' class="form-control big-text-area"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
    </div>

<% include ../partials/footer.ejs %>

<script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</div>